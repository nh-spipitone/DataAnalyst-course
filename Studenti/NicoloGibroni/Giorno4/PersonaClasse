class Persona:
    def __init__(self, nome, cognome, eta):
        self.nome = nome
        self.cognome = cognome
        self.eta = eta

    def saluta(self):
        print(f"Ciao {self.nome} {self.cognome}")

    def __str__(self):
        return f"Nome: {self.nome}\nCognome: {self.cognome}\nEt√†: {self.eta}"

persona = Persona("miao", "metto", 37)
persona.saluta()
print(persona)